<?xml version="1.0"?>
<ruleset name="HTTP-Factory coding standard">
    <description>HTTP-Factory coding standard</description>

    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>commands</file>
    <file>components</file>
    <file>config</file>
    <file>controllers</file>
    <file>modules</file>
</ruleset>